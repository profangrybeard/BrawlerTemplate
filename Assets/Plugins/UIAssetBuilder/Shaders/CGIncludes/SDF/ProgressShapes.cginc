// SHAPES
#ifndef USE_PROGRESS
#define USE_PROGRESS

// Pie
float sdPie( in float2 p, in float2 c, in float r )
{
    p.x = abs(p.x);
    float l = length(p) - r;
    float m = length(p-c*clamp(dot(p,c),0.0,r)); // c=sin/cos of aperture
    return max(l,m*sign(c.y*p.x-c.x*p.y));
}

// Cut Disk
float sdCutDisk( in float2 p, in float r, in float h )
{
    float w = sqrt(r*r-h*h); // constant for any given shape
    p.x = abs(p.x);
    float s = max( (h-r)*p.x*p.x+w*w*(h+r-2.0*p.y), h*p.x-w*p.y );
    return (s<0.0) ? length(p)-r :
           (p.x<w) ? h - p.y     :
                     length(p-float2(w,h));
}

// Arc
float sdArc( in float2 p, in float2 sc, in float ra, float rb )
{
    // sc is the sin/cos of the arc's aperture
    p.x = abs(p.x);
    return ((sc.y*p.x>sc.x*p.y) ? length(p-sc*ra) : 
                                  abs(length(p)-ra)) - rb;
}

// Ring
float sdRing( in float2 p, in float2 n, in float r, float th )
{
    p.x = abs(p.x);
   
    p = mul(float2x2(n.x, n.y, -n.y, n.x), p);

    return max( abs(length(p)-r)-th*0.5,
                length(float2(p.x,max(0.0,abs(r-p.y)-th*0.5)))*sign(p.x) );
}
#endif